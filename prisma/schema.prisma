// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String
  password    String
  skills      Skill[]
  SkillsPage  SkillsPage[]
  AboutPage   AboutPage[]
  ContactPage ContactPage[]
  Project     Project[]
}

model Skill {
  id    Int    @id @default(autoincrement())
  title String
  users User[]
}

model TokenBlacklist {
  id   Int    @id @default(autoincrement())
  code String
}

model SkillsPage {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  lastJobs    DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

model AboutPage {
  id              Int    @id @default(autoincrement())
  title           String
  description     String
  illustrationUrl String
  illustrationAlt String
  user            User   @relation(fields: [userId], references: [id])
  userId          Int
}

model ContactPage {
  id           Int    @id @default(autoincrement())
  title        String
  description  String
  localization String
  user         User   @relation(fields: [userId], references: [id])
  userId       Int
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  snapshot    String
  githubLink  String
  lastUpdate  DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}
